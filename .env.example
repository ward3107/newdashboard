# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your apps > Web app
# See docs/FIREBASE_SETUP_GUIDE.md for detailed instructions
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Optional: Use Firebase Emulators for local development
# VITE_USE_FIREBASE_EMULATORS=true

# Google Apps Script Configuration
VITE_GOOGLE_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
VITE_SPREADSHEET_ID=YOUR_SPREADSHEET_ID
VITE_API_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
VITE_USE_MOCK_DATA=false

# Admin Panel Security
VITE_ADMIN_PASSWORD=your_secure_admin_password_here
VITE_ADMIN_PASSWORD_HASH= # Use bcrypt hash in production
VITE_SESSION_TIMEOUT_MS=3600000 # 1 hour
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION_MS=900000 # 15 minutes

# OpenAI / ISHEBOT Configuration
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here
VITE_ISHEBOT_BACKEND_URL=http://localhost:3000
VITE_ISHEBOT_API_KEY=your_ishebot_api_key_here

# i18n Configuration
VITE_DEFAULT_LOCALE=he
VITE_SUPPORTED_LOCALES=he,en,ar,ru

# Feature Flags
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_EXPORT=true

# API Configuration
VITE_API_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000

# Optimization Backend (Python FastAPI)
VITE_OPTIMIZATION_API_URL=http://localhost:8000

# Development Configuration
VITE_DEV_MODE=false
VITE_LOG_LEVEL=info
NODE_ENV=development
PORT=3000
