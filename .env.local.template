# ISHEBOT Environment Variables - LOCAL DEVELOPMENT
# Copy this to .env.local and fill in your values

# ============================================
# FIREBASE CONFIGURATION (REQUIRED)
# ============================================
# Get from: https://console.firebase.google.com → Project Settings → Your apps
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ============================================
# DATA SOURCE (REQUIRED - Choose One)
# ============================================
# Option A: Use Firestore (Recommended)
VITE_USE_FIRESTORE=true

# Option B: Use Google Sheets (if you have existing data)
# VITE_USE_FIRESTORE=false
# VITE_GOOGLE_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
# VITE_SPREADSHEET_ID=YOUR_SPREADSHEET_ID

# ============================================
# AI CONFIGURATION (Optional - Add Later)
# ============================================
# Claude API (for main AI features)
VITE_CLAUDE_API_KEY=

# OpenAI API (for Cloud Function only)
VITE_OPENAI_API_KEY=

# ============================================
# BACKEND API (Optional - Add Later)
# ============================================
# Python FastAPI for classroom optimization
# For now, use localhost (will deploy in Task #6)
VITE_OPTIMIZATION_API_URL=http://localhost:8000

# ============================================
# FEATURE FLAGS (Recommended Settings)
# ============================================
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_EXPORT=true

# ============================================
# LOCALIZATION (Default Settings)
# ============================================
VITE_DEFAULT_LOCALE=he
VITE_SUPPORTED_LOCALES=he,en,ar,ru

# ============================================
# API CONFIGURATION (Default Settings)
# ============================================
VITE_API_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
VITE_DEV_MODE=true
VITE_LOG_LEVEL=info
NODE_ENV=development
