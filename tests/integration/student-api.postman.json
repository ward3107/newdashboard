    {
      "name": "Mock API - Students",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:1080/api/students",
          "protocol": "http",
          "host": ["localhost"],
          "port": "1080",
          "path": ["api", "students"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is array\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "});",
              "",
              "pm.test(\"Contains test student\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData[0].name).to.eql(\"Test Student\");",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4173"
    }
  ]
}