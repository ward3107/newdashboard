rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all school data (students are not sensitive personal data in this context)
    // You can add authentication later if needed
    match /schools/{schoolId}/students/{studentId} {
      allow read: if true; // Public read access
      allow write: if false; // No client-side writes (only via migration script)
    }

    match /schools/{schoolId} {
      allow read: if true; // Public read access to school metadata
      allow write: if false; // No client-side writes
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
